<!DOCTYPE html>
<html>
<head>
<meta charSet="utf-8"/><meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, minimum-scale=1.0"/>
<meta http-equiv="cache-control" content="no-cache" />
<meta http-equiv="Pragma" content="no-cache" />
<meta http-equiv="expires" content="0" />
<style>
    body{
        font-size:30px;
        text-align: center;
    }
    a{
        text-decoration: none;
        display:block;
        color:red;
    }
</style>
</head>
<body>
    <table border="1">
        <tr>
            <td>GPIO针脚</td>
            <td>当前状态</td>
            <td colspan="2">操作</td>
        </tr>
        <% data.forEach(function(switcher){
            %>
        <tr>
            <td><%= switcher.pin %></td>
            <td><%= switcher.state %></td>
            <td><a href='/on?pin=<%= switcher.pin %>'>开</a></td>
            <td><a href='/off?pin=<%= switcher.pin %>'>关</a></td>
        </tr>
        <%
    }) %>
    </table>
       
</body>
</html>